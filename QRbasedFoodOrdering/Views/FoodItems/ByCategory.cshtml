@model IEnumerable<QRbasedFoodOrdering.Models.FoodItem>



<h1>Food Items</h1>
@{
    ViewData["Title"] = "GetAllFoods";
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100">
                <img src="~/Images/@item.imageUrl" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Title</h5>
                   
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="text-primary fw-bold">SGD @item.Price</span>
                        <a asp-controller="OrderDetails" asp-action="create" asp-route-id="@item.FoodItemId" class="btn btn-sm btn-outline-primary">Order</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
