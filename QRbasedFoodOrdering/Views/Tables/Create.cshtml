@model QRbasedFoodOrdering.Models.Table

@{
    ViewBag.Title = "Create Table";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">Add New Table</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                <div class="mb-3">
                    @Html.LabelFor(model => model.TableName, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(model => model.TableName, new { @class = "form-control", placeholder = "Enter table name or number" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Capacity, new { @class = "form-label fw-bold" })
                    @Html.TextBoxFor(model => model.Capacity, new { @class = "form-control", placeholder = "Enter seating capacity", type = "number", min = "1" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.IsAvailable, htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.IsAvailable,
                             new SelectList(new[]
                             {
                new { Value = "true", Text = "Available" },
                new { Value = "false", Text = "Not Available" }
                }, "Value", "Text"),
                             "Select Availability",
                             new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IsAvailable, "", new { @class = "text-danger" })
                </div>


                <div class="d-flex justify-content-between align-items-center">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Back to List</a>
                    <button type="submit" class="btn btn-success px-4">Create</button>
                </div>
            }
        </div>
    </div>
</div>



