@model IEnumerable<QRbasedFoodOrdering.Models.Table>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TableName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAvailable)
            @* </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th> *@
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.TableId" class="btn btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TableId" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TableId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
