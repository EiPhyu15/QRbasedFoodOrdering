@model IEnumerable<QRbasedFoodOrdering.Models.Table>
@{
	ViewData["Title"] = "Assign Table";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container mt-5">
    <h2><i class="bi bi-person-plus"></i> Assign Table</h2>
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>TableName</th>
                <th>Capacity</th>
                <th>Status</th>
               @*  <th>Action</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.TableName</td>
                    <td>
                        @if (table.Status == QRbasedFoodOrdering.Models.TableStatus.Available)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@table.Status</span>
                        }
                    </td>
                    <td>
                        @if (table.Status == QRbasedFoodOrdering.Models.TableStatus.Available)
                        {
                            <form asp-action="AssignTable" method="post" class="d-inline">
                                <input type="hidden" name="tableId" value="@table.TableId" />
                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="bi bi-check2-circle"></i> Assign
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary btn-sm" disabled>
                                <i class="bi bi-x-circle"></i> Unavailable
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>