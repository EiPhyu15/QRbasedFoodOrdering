@model QRbasedFoodOrdering.Models.Order
@{
	ViewData["Title"] = "QR Code";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container mt-5 text-center">
    <h2><i class="bi bi-upc-scan"></i> Table QR Code</h2>
    <div class="card mx-auto mt-4" style="max-width: 400px;">
        <div class="card-body">
            <h5 class="card-title">Table: @Model.Table?.TableName</h5>
            <div class="my-4">
                <div class="bg-white p-3 border rounded">
                    <h6 class="text-center">Scan to Order</h6>

                    <img src="@Url.Action("GenerateQRCodeImage", new { guid = Model.QRCode })" alt="QR Code"
                         style="width:200px; height:200px;" />


                </div>
            </div>
            <p class="card-text">Order ID: <span class="fw-bold">@Model.OrderId</span></p>
            <p class="card-text">Status: <span class="badge bg-info">@Model.status</span></p>
            <a href="javascript:window.print()" class="btn btn-outline-primary mt-3">
                <i class="bi bi-printer"></i> Print QR Code
            </a>
        </div>
    </div>
    <a href="@Url.Action("Assign")" class="btn btn-link mt-4">
        <i class="bi bi-arrow-left"></i> Back to Table Assignment
    </a>
</div>
