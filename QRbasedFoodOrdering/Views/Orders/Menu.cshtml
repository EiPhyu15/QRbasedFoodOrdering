@model IEnumerable<QRbasedFoodOrdering.Models.Category>
@{
    ViewData["Title"] = "Menu";
    var order = ViewBag.Order as QRbasedFoodOrdering.Models.Order;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container mt-4">
    <div class="text-center mb-4">
        <h2><i class="bi bi-list"></i> Menu for Table @order?.Table?.TableName</h2>
        <span class="badge bg-info">Order ID: @order?.OrderId</span>
    </div>
    <div class="accordion" id="menuAccordion">
        @foreach (var category in Model)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@category.CategoryId">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@category.CategoryId" aria-expanded="false" aria-controls="collapse-@category.CategoryId">
                        <i class="bi bi-folder"></i> @category.Description
                    </button>
                </h2>
                <div id="collapse-@category.CategoryId" class="accordion-collapse collapse" aria-labelledby="heading-@category.CategoryId" data-bs-parent="#menuAccordion">
                    <div class="accordion-body">
                        <div class="row">
                            @foreach (var item in category.FoodItems)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card h-100">
                                        <img src="~/Images/@item.imageUrl" class="card-img-top" alt="Item Image">
                                        <div class="card-body">
                                            @* <h5 class="card-title">@item.</h5> *@
                                            <p class="card-text">@item.Title</p>
                                            <p class="card-text fw-bold">$@item.Price</p>
                                            @if (item.IsActive)
                                            {
                                                <form method="post" asp-action="AddToCart" asp-controller="Orders">
                                                    <input type="hidden" name="fooditemid" value="@item.FoodItemId" />
                                                    <input type="hidden" name="orderId" value="@ViewBag.OrderId" />
                                                    <div class="input-group mb-2">
                                                        <input type="number" name="quantity" value="1" min="1" class="form-control" style="max-width: 80px;" />
                                                        <button type="submit" class="btn btn-success">
                                                            <i class="bi bi-cart-plus"></i> Add
                                                        </button>
                                                    </div>
                                                </form>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Unavailable</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center mt-4">
        <a href="@Url.Action("Cart", new { guid = ViewBag.Guid})" class="btn btn-primary btn-lg">
            <i class="bi bi-cart"></i> View Cart
        </a>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
