@model IEnumerable<QRbasedFoodOrdering.Models.OrderDetail>
@{
	ViewData["Title"] = "Cart";
	var order = ViewBag.Order as QRbasedFoodOrdering.Models.Order;
	var comfiremditems = ViewBag.ComfirmedItems as IEnumerable<QRbasedFoodOrdering.Models.OrderDetail>;

}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container my-8">
	<div class="text-center mb-4">
		<h2><i class="bi bi-cart"></i> Your Cart for Table @order?.Table?.TableName</h2>
		<span class="badge bg-info">Order ID: @order?.OrderId</span>
	</div>
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="bi bi-exclamation-circle"></i> Your cart is empty.
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Menu", new { guid = order?.QRCode })" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to Menu
            </a>
        </div>
    }
    else
    {
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FoodItem?.Title</td>
                        <td>@item.Quantity</td>
                        <td>$@item.Price</td>
                        <td>$@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-end fw-bold">Total</td>
                    <td class="fw-bold">
                       
                        @Model.Sum(i => i.Price * i.Quantity).ToString("C")
                    </td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center mt-4">
            <a href="@Url.Action("Menu", new { guid = order?.QRCode })" class="btn btn-secondary btn-lg me-2">
                <i class="bi bi-arrow-left"></i> Back to Menu
            </a>
            <form asp-action="ConfirmOrder" asp-controller="Orders" method="post" class="d-inline">
                <input type="hidden" name="guid" value="@order?.QRCode" />
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-check-circle"></i> Confirm Order
                </button>
            </form>
        </div>
    }

  
    @if (comfiremditems != null && comfiremditems.Any())
    {
        <div class="mt-5">
            <h4><i class="bi bi-list-check"></i> Confirmed Items</h4>
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in comfiremditems)
                    {
                        <tr>
                            <td>@item.FoodItem?.Title</td>
                            <td>@item.Quantity</td>
                            <td>$@item.Price</td>
                            <td>$@(item.Price * item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>
           
            <div class="text-center mt-4">
                <form asp-action="RequestBill" asp-controller="Orders" method="post">
                    <input type="hidden" name="guid" value="@order?.QRCode" />
					@* <button type="submit">Submit</button> *@
                    <button type="submit" class="btn btn-warning btn-lg">
                        Get me the Bill
                    </button>
                </form>
            </div>
        </div>
      
    }
</div>s
